<%- include('header') -%>
    <header>
        <h1><%=titre%></h1>
    </header>
    <section id="messages">
        <!-- Si je reçois des données, j'affiche le tableau -->
        <% if (donnees.length) { %>
        <table>
            <thead>
                <tr>
                    <th width="15%">Nom</th>
                    <th width="45%">Message</th>
                    <th width="25%">Date</th>
                    <th width="15%" colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0; i<donnees.length; i++) { %>
                <tr>
                    <td><%= donnees[i].nom %></td>
                    <td title="<%= donnees[i].id %>"><%= donnees[i].message %></td>
                    <td><%= moment(donnees[i].datemessage).format('DD-MMM-YYYY HH:mm:ss') %></td>
                    <td><a href="/messages/read/<%= donnees[i].id %>">Détails</a></td>
                    <td><a href="/messages/edit/<%= donnees[i].id %>">Modifier</a></td>
                    <td><a href="/messages/confirm/<%= donnees[i].id %>">Supprimer</a></td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        <!-- S'il n'y a pas de données, j'affiche le message suivant -->
        <% if (!donnees.length) { %>
        <h3 class="au-centre">Pas de données actuellement !</h3>
        <% } %>
    </section>
    <p><a href="/">Retour vers l'accueil</a></p>
<%- include('footer') -%>    